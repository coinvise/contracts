{
  "name": "@coinvise/campaigns",
  "description": "Coinvise contracts for Campaigns",
  "version": "1.0.0",
  "author": {
    "name": "Coinvise",
    "url": "https://github.com/coinvise"
  },
  "devDependencies": {
    "@codechecks/client": "^0.1.12",
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@coinvise/hardhat": "workspace:*",
    "@ethereum-waffle/mock-contract": "^4.0.4",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/abstract-signer": "^5.7.0",
    "@ethersproject/bignumber": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/constants": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "@primitivefi/hardhat-dodoc": "^0.2.3",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/fs-extra": "^11.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "chai": "^4.3.7",
    "commitizen": "^4.3.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "ethers": "^5.7.2",
    "fs-extra": "^11.1.1",
    "hardhat": "^2.17.2",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-packager": "^1.4.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "lodash": "^4.17.21",
    "mocha": "^10.2.0",
    "pinst": "^3.0.0",
    "prettier": "^2.8.7",
    "prettier-plugin-solidity": "^1.1.3",
    "shelljs": "^0.8.5",
    "shx": "^0.3.4",
    "solc": "^0.8.19",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.3",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^5.0.4"
  },
  "files": [
    "/artifacts",
    "/contracts",
    "/dist"
  ],
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "build:types": "pnpm prepare:types && tsc --project ./tsconfig.prod.json && copyfiles --up 1 \"./src/**/*.d.ts\" ./dist",
    "clean": "shx rm -rf ./artifacts ./cache ./coverage ./src/types ./dist ./coverage.json",
    "commit": "git-cz",
    "compile": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile",
    "coverage": "pnpm typechain && hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"test/**/*.ts\" && pnpm typechain",
    "deploy:Campaigns": "hardhat deploy:Campaigns",
    "deploy:CampaignsNativeGaslessClaim": "hardhat deploy:CampaignsNativeGaslessClaim",
    "upgrade:Campaigns": "hardhat upgrade:Campaigns",
    "upgrade:CampaignsNativeGaslessClaim": "hardhat upgrade:CampaignsNativeGaslessClaim",
    "run:createCampaign": "hardhat run:createCampaign",
    "run:claim": "hardhat run:claim",
    "docs": "hardhat dodoc && prettier --config ./.prettierrc.yaml --write \"docs/**\" --loglevel silent",
    "lint": "pnpm lint:sol && pnpm lint:ts && pnpm prettier:check",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "postpack": "pinst --enable",
    "prepack": "pinst --disable && pnpm build:types",
    "prepare:types": "pnpm hardhat prepare-package",
    "prettier": "prettier --config ./.prettierrc.yaml --write \"**/*.{js,json,md,sol,ts}\" --plugin=prettier-plugin-solidity",
    "prettier:check": "prettier --check --config ./.prettierrc.yaml \"**/*.{js,json,md,sol,ts}\" --plugin=prettier-plugin-solidity",
    "prettier:silent": "pnpm prettier --loglevel silent",
    "test": "cross-env REPORT_GAS=true hardhat test",
    "typechain": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat typechain",
    "eth-security-toolbox": "docker run -it --rm -v $PWD/../../../../coinvise:/coinvise -w /coinvise/apps/contracts/campaigns trailofbits/eth-security-toolbox",
    "slither": "docker run --rm -v $PWD/../../../../coinvise:/coinvise -w /coinvise/apps/contracts/campaigns --entrypoint slither trailofbits/eth-security-toolbox --solc-remaps @=node_modules/@ --solc-args '--allow-paths /'"
  },
  "dependencies": {
    "@coinvise/chain": "workspace:*",
    "@openzeppelin/contracts": "^4.9.2",
    "@openzeppelin/contracts-upgradeable": "^4.9.2"
  }
}
